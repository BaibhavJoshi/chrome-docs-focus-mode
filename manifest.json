{
    "manifest_version": 3,
    "name": "chrome-docs-focus-mode",
    "description": "Enable focus mode on Chrome's official developer documentation.",
    "version": "1.0",
    "icons": {
        "16": "./assets/images/icon-16.png",
        "32": "./assets/images/icon-16.png",
        "48": "./assets/images/icon-16.png",
        "128": "./assets/images/icon-16.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_icon": {
            "16": "./assets/images/icon-16.png",
            "32": "./assets/images/icon-32.png",
            "48": "./assets/images/icon-48.png",
            "128": "./assets/images/icon-128.png"
        }
    },
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Ctrl+B",
                "mac": "Command+B"
            }
        }
    }
}